<%- include("partials/header.ejs") %>

<div>
  <h1 class="margin-title gothic-text">Posts</h1>

  <% if(locals.posts) {%> <% if(posts.length !== 0) { %>
  <ul class="margin-text quicksand-text list-posts">
    <% for(let i = 0; i < posts.length; ++i) { %>
    <li class="list-post-cell">
      <a href="/posts/<%= posts[i].id %>"><%= posts[i].title %></a>
    </li>
    <% } %>
  </ul>
  <% } else { %>
  <p class="margin-text quicksand-text">There is no posts yet :(</p>
  <% } %> <% } %>
</div>

